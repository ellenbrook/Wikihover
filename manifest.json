{
  "name": "Wikihover",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A Chrome extension that allows you get the summary of an article with the hover of your mouse.",
  "homepage_url": "http://ellenbrook.github.io",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "http://wikipedia.org/*",
    "http://en.wikipedia.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://wikipedia.org/*",
        "http://*.wikipedia.org/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "src/inject/inject.js"
      ]
    }
  ]
}